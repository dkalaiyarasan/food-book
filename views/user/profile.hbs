{{#if products}}
<div class="card">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Stock Management</h3>
    <div class="card-body">
        <div id="table-admin" class="table-editable">
            <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i class="fas fa-plus fa-2x"
                        aria-hidden="true"></i></a></span>
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <thead>
                    <tr>
                        <th class="text-center">Item Name</th>
                        <th class="text-center">Image Path</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Menu</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td contenteditable="true" class="title pt-3-half">{{title}}</td>
                        <td contenteditable="true" class="imagepath pt-3-half">{{imagepath}}</td>
                        <td contenteditable="true" class="description pt-3-half">{{description}}</td>
                        <td contenteditable="true" class="menu pt-3-half">{{menu}}</td>
                        <td contenteditable="true" class="price pt-3-half">{{price}}</td>
                        <td contenteditable="true" class="quantity pt-3-half">{{quantity}}</td>
                        <td>
                            <input type="hidden" class="productid" value="{{_id}}" />
                            <span class="table-save"><button type="button"
                                    class="btn btn-danger btn-rounded btn-sm my-0">Save</button></span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <input type="hidden" class="csrf" value="{{csrfToken}}" />
        </div>
    </div>
</div>
<!-- Editable table -->
<script src="/javascripts/admin.js"></script>-
{{/if}}